# Cloudflare API Token (create at https://dash.cloudflare.com/profile/api-tokens)
# Needs Zone:Read and DNS:Edit permissions for your domain
CLOUDFLARE_API_TOKEN=your_api_token_here

# Your domain (e.g., example.com)
DOMAIN=example.com

# DNS record names to update (comma-separated list)
# Examples: 
#   Single record: RECORD_NAMES=home.example.com
#   Multiple records: RECORD_NAMES=home.example.com,server.example.com,api.example.com
#   Local subdomains: RECORD_NAMES=local.project.example.com,local.api.example.com,local.web.example.com
RECORD_NAMES=home.example.com

# TTL in seconds (optional, default: 1 for automatic)
TTL=1

# Check interval in seconds (optional, default: 300 = 5 minutes)
CHECK_INTERVAL=300

# New subdomain pattern for renaming local.* domains (optional)
# Example: NEW_SUBDOMAIN_PATTERN=dev (changes local.project.portolabs.id to dev.project.portolabs.id)
NEW_SUBDOMAIN_PATTERN=dev

# Auto-discover and update DNS records matching a pattern (optional, default: false)
# When enabled, RECORD_NAMES is ignored and all matching records are automatically updated
AUTO_DISCOVER_LOCAL=false

# DNS pattern to match when AUTO_DISCOVER_LOCAL is enabled (optional, default: local)
# Examples: DNS_PATTERN=local (matches local.*), DNS_PATTERN=dev (matches dev.*), DNS_PATTERN=home (matches home.*)
DNS_PATTERN=local